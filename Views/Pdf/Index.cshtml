@model IEnumerable<pagebuilder.ViewModel.PdfViewModel>
@{
    ViewBag.Title = "All Pdf";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@RenderPage("../Shared/PanelMenu.cshtml")
<div class="panel panel-body">
    <h2>All Pdf</h2>
    <hr />
    <table class="table page page-main table-striped table-bordered table-sm">
        <tbody>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    File Name
                </th>

                <th>
                    Link
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FileName)
                    </td>
                    <!--   <td>
                           <img src="~/Pdfs/RetrieveImage/@item.Id" alt="" width=200 />
                       </td> -->
                    <td>
                        @if (item.FileName != null)
                        {

                        <p id="p_@item.Id">@Url.Content("~/Content/PdfFiles/")@Html.DisplayFor(modelItem => item.FileName)</p>
                        }
                        else
                        {
                            <p id="p_@item.Id">@Html.DisplayFor(modelItem => item.ExLink)</p>
                        }
                        <button onclick="copyToClipboard('p_@item.Id')">Copy Link</button>

                    </td>
                    <td>
                        <div class="actions text-right">

                            <a href="@Url.Action("Delete", new { id = item.Id })" class="ai ai-trash btn btn-danger">
                                <i class="fa fa-trash-o" aria-hidden="true"></i>
                            </a>
                        </div>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

