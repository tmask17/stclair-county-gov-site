@model pagebuilder.Model.Menugroup
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewBag.Title = "Delete";
}
@RenderPage("../Shared/PanelMenu.cshtml")
<div class="panel panel-body panel-menugroup">
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal form-delete">
        @using (Html.BeginForm("Delete", "Menugroups", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <input id="menucollapse" type="hidden" name="menucollapse" value="1" />
            <div class="row form-header">
                <div class="col-sm-6">
                    <h4>Delete Menu Item</h4>
                </div>
                <div class="col-sm-6">

                    <p class="text-right">
                        Are you sure you want to delete this?
                    </p>

                    <p class="text-right">
                        <input type="submit" value="Delete" class="btn btn-danger btn-sm" />
                        <a href="@Url.Action("Index")" class="f-back btn btn-default btn-sm">
                            Back to List
                        </a>
                    </p>
                </div>
            </div>
        }
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="row form-group">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayFor(model => model.Name)
            </div>
        </div>
    </div>
</div>


